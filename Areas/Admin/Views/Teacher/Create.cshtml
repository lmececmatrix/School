@model TeacherModel

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Create Class</h1>
            <form class="form-sample" enctype="multipart/form-data" method="post">
                <p class="card-description">
                    Class info
                    <div asp-validation-summary="All"></div>
                </p>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label>File upload</label>
                            <input asp-for="Image" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input asp-for="Image" class="form-control file-upload-info" placeholder="Upload Image">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Subject</label>
                            <div class="col-sm-10">
                                <textarea asp-for="Subject" class="form-control"></textarea>
                                <span asp-validation-for="Subject"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Social Facebook</label>
                            <div class="col-sm-10">
                                <input asp-for="Social.LinkFacebook" class="form-control">
                                <span asp-validation-for="Social.LinkFacebook"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Social Twitter</label>
                            <div class="col-sm-10">
                                <input asp-for="Social.LinkedTwitter" class="form-control">
                                <span asp-validation-for="Social.LinkedTwitter"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Social LinkedIn</label>
                            <div class="col-sm-10">
                                <input asp-for="Social.LinedLinkedIn" class="form-control">
                                <span asp-validation-for="Social.LinedLinkedIn"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary me-2">Save</button>
            </form>
        </div>
    </div>
</div>