@{
    Layout = "_Base";
}

@model RegisterUserModel


<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/static/images/logo.svg" alt="logo">
                        </div>
                        <h4>Hello! let's get started</h4>
                        <h6 class="fw-light">Sign in to continue.</h6>
                        <form class="pt-3" method="post">
                            <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <input asp-for="Username" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                                <span asp-validation-for="Username"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="ConfirmPassword" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Confirm Password">
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="mt-3">
                                <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >SIGN UP</button>
                            </div>
                            <div class="mb-2">
                                <button type="button" class="btn btn-block btn-facebook auth-form-btn">
                                    <i class="ti-facebook me-2"></i>Connect using facebook
                                </button>
                            </div>
                            <div class="text-center mt-4 fw-light">
                                Don't have an account? <a href="register.html" class="text-primary">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
